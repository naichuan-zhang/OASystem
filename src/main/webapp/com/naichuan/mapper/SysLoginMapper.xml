<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.naichuan.mapper.SysLoginMapper">
    <resultMap id="resultMap" type="com.naichuan.entity.SysLogin">
        <id column="login_id" property="loginId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="wxname" property="wxname"/>
    </resultMap>
    <sql id="baseColumns">
        login_id, username, password, email, wxname
    </sql>
    <select id="selectByUsername" resultMap="resultMap" parameterType="string">
        select
        <include refid="baseColumns"/>
        from sys_login
        where username = #{username}
    </select>
</mapper>